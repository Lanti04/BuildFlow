{
  "name": "buildflow",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "cap:sync": "cap sync",
    "cap:open:ios": "cap open ios",
    "cap:add:ios": "cap add ios",
    "predeploy": "npm run build && npm run fix-404",
    "fix-404": "node scripts/fix-404.js",
    "deploy": "gh-pages -d dist --dotfiles",
    "deploy:with-api": "echo 'Usage: VITE_API_BASE_URL=https://your-api-url.onrender.com/api npm run build && npm run deploy'"
  },
  "dependencies": {
    "@capacitor/app": "^5.0.6",
    "@capacitor/cli": "^5.5.1",
    "@capacitor/core": "^5.5.1",
    "@capacitor/filesystem": "^5.1.4",
    "@capacitor/ios": "^5.5.1",
    "date-fns": "^2.30.0",
    "fabric": "^5.3.0",
    "html2canvas": "^1.4.1",
    "idb": "^7.1.1",
    "jspdf": "^2.5.1",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-calendar": "^4.7.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "react-signature-canvas": "^1.0.6",
    "react-sketch-canvas": "^6.2.0",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-signature-canvas": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "gh-pages": "^6.3.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
